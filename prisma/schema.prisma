generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

// Pharmacist - Assistant - Accountant

// Inventory management
// Insurance maybeeeeee

model Staff {
  id                         String     @id
  email                      String     @unique @db.VarChar(30)
  name                       String     @db.VarChar(30)
  password                   String     @db.VarChar(200)
  joinedAt                   DateTime   @default(now())
  role                       Roles
  drugs                      Drug[]
  patient                    Patient?
}

model Drug {
  id                         String     @id
  supplier                   Staff      @relation(fields: [supplierId], references: [id])
  supplierId                 String
  supplierOrganization       String     @db.VarChar(30)
  drugName                   String     @db.VarChar(30)
  drugFamily                 String     @db.VarChar(30)
  manufactureDate            DateTime
  expirationDate             DateTime
  suppliedAt                 DateTime   @default(now())
  requiresDoctorPrescription Boolean
  price                      Int
  quantity                   Int
}

model Patient {
  id                         String     @id
  name                       String     @db.VarChar(30)
  email                      String?    @unique
  visitedAt                  DateTime   @default(now())
  demandedDrugs              Json       @db.Json()
  hasValidDoctorPrescription Boolean
  pharmacist                 Staff?     @relation(fields: [pharmacistId], references: [id])
  pharmacistId               String?    @unique
  code                       Int        @unique
  isOrderCompleted           Boolean    @default(false)
}

enum Roles {
  PHARMACIST
  ACCOUNTANT
}