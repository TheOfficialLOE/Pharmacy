// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Staff {
  id                         String       @id
  email                      String       @unique @db.VarChar(30)
  name                       String       @db.VarChar(30)
  password                   String       @db.VarChar(200)
  joinedAt                   DateTime     @default(now())
  role                       Roles
  drugs                      Drug[]
  patient                    Patient[]
}

model Drug {
  id                         String       @id
  supplier                   Staff        @relation(fields: [supplierId], references: [id])
  supplierId                 String
  supplierOrganization       String       @db.VarChar(30)
  drugName                   String       @db.VarChar(30)
  drugFamily                 String       @db.VarChar(30)
  manufactureDate            DateTime
  expirationDate             DateTime
  suppliedAt                 DateTime     @default(now())
  requiresDoctorPrescription Boolean
  price                      Int
  quantity                   Int
}

model Patient {
  id                         String       @id
  code                       String       @unique
  state                      PatientState @default(WAITING)
  pharmacist                 Staff?       @relation(fields: [pharmacistId], references: [id])       
  pharmacistId               String?
  visitedAt                  DateTime     @default(now())
}

enum Roles {
  PHARMACIST
  ACCOUNTANT
}

enum PatientState {
  WAITING
  IN_PROCESS
  COMPLETED
}