// This is your prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Pharmacist {
  id                         String     @id
  name                       String     @db.VarChar(30)
  email                      String     @unique @db.VarChar(30)
  password                   String     @db.VarChar(200)
  createdAt                  DateTime   @default(now())
  updatedAt                  DateTime?
  patient                    Patient?   @relation(fields: [currentPatientCode], references: [code])
  currentPatientCode         Int?       @unique
}

model Accountant {
  id                         String     @id
  name                       String     @db.VarChar(30)
  email                      String     @unique @db.VarChar(30)
  password                   String     @db.VarChar(200)
  createdAt                  DateTime   @default(now())
  updatedAt                  DateTime?
  suppliedDrugs              Drug[]
}

model Drug {
  id                         String     @id
  name                       String     @db.VarChar(30)
  drugFamily                 String     @db.VarChar(20)
  manufactureDate            DateTime
  expirationDate             DateTime
  suppliedAt                 DateTime   @default(now())
  updatedAt                  DateTime?
  requiresDoctorPrescription Boolean
  price                      Int
  remaining                  Int
  supplier                   Accountant @relation(fields: [supplierId], references: [id]) 
  supplierId                 String
  supplierOrganization       String     @db.VarChar(30)
}

model Patient {
  id                         String     @id
  name                       String     @db.VarChar(30)
  email                      String?    @unique
  visitedAt                  DateTime   @default(now())
  updatedAt                  DateTime?
  demandedDrugs              Json       @db.Json()
  hasValidDoctorPrescription Boolean
  pharmacist                 Pharmacist?
  code                       Int        @unique
  isOrderCompleted           Boolean    @default(false)
}